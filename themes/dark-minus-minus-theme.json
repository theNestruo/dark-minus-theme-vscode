{
	"$schema": "vscode://schemas/color-theme",
	"name": "Dark-- (default UI)",
	"type": "dark",
	"semanticHighlighting": false,
	"colors": {
		// Clones "Dark (Visual Studio) / Dark+ (default dark)" styles
		"editor.foreground": "#d3d4d2", // (default is "#bbbbbb")

		// Dimmed indent guides, line numbers, rulers and whitespace
		"editorLineNumber.activeForeground": "#d3d4d260", // (default is "#c6c6c6")
		"editorLineNumber.foreground": "#d3d4d230", // (default is "#858585")
		"editorRuler.foreground": "#d3d4d230", // (default is "#5a5a5a")
		"editorWhitespace.foreground": "#d3d4d230" // (default is "#e3e4e229")
	},
	"tokenColors": [

		// Basic modifiers:
		{
			"name": "Italic",
			"scope": [
				"emphasis",
				"markup.italic"
			],
			"settings": {
				"fontStyle": "italic"
			}
		},
		{
			"name": "Bold",
			"scope": [
				"strong",
				"markup.bold",
				"markup.bold string"
			],
			"settings": {
				"fontStyle": "bold"
			}
		},
		{
			"name": "Italic+Bold",
			"scope": [
				"markup.italic markup.bold",
				"markup.bold markup.italic",
				"markup.italic markup.bold string",
				"markup.bold markup.italic string"
			],
			"settings": {
				"fontStyle": "italic bold"
			}
		},
		{
			"name": "Underline",
			"scope": [
				"markup.underline"
			],
			"settings": {
				"fontStyle": "underline"
			}
		},
		{
			"name": "Italic+Underline",
			"scope": [
				"markup.italic markup.underline",
				"markup.underline markup.italic"
			],
			"settings": {
				"fontStyle": "italic underline"
			}
		},
		{
			"name": "Bold+Underline",
			"scope": [
				"markup.bold markup.underline",
				"markup.underline markup.bold"
			],
			"settings": {
				"fontStyle": "bold underline"
			}
		},
		{
			"name": "Italic+Bold+Underline",
			"scope": [
				"markup.italic markup.bold markup.underline",
				"markup.italic markup.underline markup.bold",
				"markup.bold markup.italic markup.underline",
				"markup.underline markup.italic markup.bold",
				"markup.bold markup.underline markup.italic",
				"markup.underline markup.bold markup.italic",
			],
			"settings": {
				"fontStyle": "italic bold underline"
			}
		},
		{
			"name": "Strikethrough",
			"scope": [
				"markup.strikethrough"
			],
			"settings": {
				"fontStyle": "strikethrough"
			}
		},

		// Colors:
		{
			"name": "Invalid",
			"scope": [
				"invalid",
				"invalid.illegal"
			],
			"settings": {
				"foreground": "#f44747" // (from "Dark (Visual Studio)")
			}
		},
		{
			"name": "Comments",
			"scope": [
				"comment",
				"punctuation.definition.comment",
				// Batch:
				"keyword.command.rem.batchfile"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#d3d4d280"
			}
		}
	]
}
