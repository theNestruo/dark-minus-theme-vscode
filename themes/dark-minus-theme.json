{
	"name": "Dark-",
	"type": "dark",
	"semanticHighlighting": false,
	"colors": {
		// Base text color
		"editor.foreground": "#D3D4D2",
		// Clones "Dark (Visual Studio)" sideBar style
		"sideBarSectionHeader.background": "#00000000",
		"sideBarSectionHeader.border": "#cccccc33",
		// Dimmed whitespace, ruler and line numbers
		"editorWhitespace.foreground": "#D3D4D230", // default is "#e3e4e229"
		"editorRuler.foreground": "#D3D4D230", // default is "#5a5a5a"
		"editorLineNumber.foreground": "#D3D4D230", // default is "#858585"
		"editorLineNumber.activeForeground": "#D3D4D260" // default is "#c6c6c6"
	},
	"tokenColors": [

		// Basic modifiers:
		{
			"scope": [ "emphasis", "markup.italic" ],
			"settings": {
				"fontStyle": "italic"
			}
		},
		{
			"scope": [ "strong", "markup.bold", "markup.heading" ],
			"settings": {
				"fontStyle": "bold"
			}
		},
		{
			"scope": [ "markup.underline" ],
			"settings": {
				"fontStyle": "underline"
			}
		},
		{
			"scope": [ "invalid" ],
			"settings": {
				"foreground": "#F44747"
			}
		},

		// Colors:
		{
			"name": "Comments",
			"scope": [
				"comment", "punctuation.definition.comment",
				// Batch:
				"keyword.command.rem",
				// Java:
				"keyword.other.documentation.javadoc",
				"comment.block.javadoc"
			],
			"settings": {
				"foreground": "#838482",
				"fontStyle": "italic"
			}
		},
		{
			"name": "Constants",
			"scope": [
				"constant",
				// Assembly:
				"support.type.register",
				// C/C++:
				"keyword.other.unit"
			],
			"settings": {
				"foreground": "#B5CEA8"
			}
		},
		{
			"name": "Keywords",
			"scope": [
				"keyword",
				"keyword.operator.new",
				// C/C++/TypeScript:
				"storage.modifier",
				"storage.type",
				"support.type",
				// HTML/XML/...:
				"entity.name.tag", "punctuation.definition.tag",
				// Java:
				"keyword.operator.instanceof", // instanceof
				"punctuation.definition.annotation", // @
				// Markdown:
				"punctuation.definition.heading.markdown", // #, ##, ###
				"punctuation.definition.list.begin.markdown", // *, -
				// Makefile:
				"variable.language" // ($<, $@)
			],
			"settings": {
				"foreground": "#569CD6"
			}
		},
		{
			"name": "Strings",
			"scope": [
				"string", "punctuation.definition.string",
				// Markdown:
				"markup.fenced_code", "punctuation.definition.markdown", // ```text```
				"markup.inline.raw.string", "punctuation.definition.raw.markdown" // `text`
			],
			"settings": {
				"foreground": "#CE9178"
			}
		},
		{
			"name": "Restore defaults",
			"scope": [
				// Fixes operators (not keywords):
				"keyword.operator",
				"storage.type.function.arrow",
				// Fixes Java (package and imported classes as keywords)
				"storage.modifier.import",
				"storage.modifier.package",
				// Fixes JSON (prevents wall of strings):
				"support.type.property-name", "punctuation.support.type.property-name",
				// Fixes YAML (prevents wall of keywords):
				"entity.name.tag.yaml"
			],
			"settings": {
				"foreground": "#D3D4D2"
			}
		}
	]
}