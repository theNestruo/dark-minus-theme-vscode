{
	"name": "Dark-",
	"type": "dark",
	"colors": {
		// Clones "Dark (Visual Studio) / Dark+ (default dark)" styles
		"activityBarBadge.background": "#007acc",
		"editor.background": "#1e1e1e",
		"editor.foreground": "#d3d4d2", // default is "#d4d4d4"
		"editor.inactiveSelectionBackground": "#3a3d41",
		"editor.selectionHighlightBackground": "#add6ff26",
		"input.placeholderForeground": "#a6a6a6",
		"list.dropBackground": "#383b3d",
		"menu.background": "#252526",
		"menu.foreground": "#cccccc",
		"ports.iconRunningProcessForeground": "#369432",
		"sideBarSectionHeader.background": "#00000000",
		"sideBarSectionHeader.border": "#cccccc33",
		"sideBarTitle.foreground": "#bbbbbb",
		"statusBarItem.remoteBackground": "#16825d",
		"statusBarItem.remoteForeground": "#ffffff",
		"tab.lastPinnedBorder": "#cccccc33",

		// Dimmed indent guides, line numbers, rulers and whitespace
		"editorIndentGuide.activeBackground": "#d3d4d260", // Dark (Visual Studio) is "#707070",
		"editorIndentGuide.background": "#404040", // Dark (Visual Studio) is "#404040",
		"editorLineNumber.activeForeground": "#d3d4d260", // default is "#c6c6c6"
		"editorLineNumber.foreground": "#d3d4d230", // default is "#858585"
		"editorRuler.foreground": "#d3d4d230", // default is "#5a5a5a"
		"editorWhitespace.foreground": "#d3d4d230" // default is "#e3e4e229"
	},
	"tokenColors": [

		// Basic modifiers:
		{
			"scope": [ "emphasis", "markup.italic" ],
			"settings": {
				"fontStyle": "italic"
			}
		},
		{
			"scope": [ "strong", "markup.bold", "markup.heading" ],
			"settings": {
				"fontStyle": "bold"
			}
		},
		{
			"scope": [ "markup.underline" ],
			"settings": {
				"fontStyle": "underline"
			}
		},
		{
			"scope": [ "invalid" ],
			"settings": {
				"foreground": "#F44747"
			}
		},

		// Colors:
		{
			"name": "Comments",
			"scope": [
				"comment", "punctuation.definition.comment",
				// Batch:
				"keyword.command.rem",
				// Java:
				"keyword.other.documentation.javadoc",
				"comment.block.javadoc"
			],
			"settings": {
				"foreground": "#838482",
				"fontStyle": "italic"
			}
		},
		{
			"name": "Constants",
			"scope": [
				"constant",
				// Assembly:
				"support.type.register",
				// C/C++:
				"keyword.other.unit"
			],
			"settings": {
				"foreground": "#B5CEA8"
			}
		},
		{
			"name": "Keywords",
			"scope": [
				"keyword",
				"keyword.operator.new",
				// C/C++/Java/TypeScript:
				"storage.modifier",
				"storage.type",
				"support.type",
				// HTML/XML/...:
				"entity.name.tag", "punctuation.definition.tag",
				// Java:
				"keyword.operator.instanceof", // instanceof
				// Markdown:
				"punctuation.definition.heading.markdown", // #, ##, ###
				"punctuation.definition.list.begin.markdown", // *, -
				// Makefile:
				"variable.language", // ($<, $@)
				// SQL:
				"support.function.aggregate.sql"
			],
			"settings": {
				"foreground": "#569CD6"
			}
		},
		{
			"name": "Strings",
			"scope": [
				"string", "punctuation.definition.string",
				// Markdown:
				"markup.fenced_code", "punctuation.definition.markdown", // ```text```
				"markup.inline.raw.string", "punctuation.definition.raw.markdown" // `text`
			],
			"settings": {
				"foreground": "#CE9178"
			}
		},

		{
			"name": "Java annotations & generics",
			"scope": [
				// Java annotations:
				"storage.type.annotation.java", "punctuation.definition.annotation.java", "punctuation.definition.annotation-arguments",
				// Java generics:
				"storage.type.generic.java", "punctuation.bracket.angle.java"
			],
			"settings": {
				"foreground": "#a3a4a2", // 50% between comment and default
				"fontStyle": "italic" // Additional italics
			}
		},

		{
			"name": "Restore defaults",
			"scope": [
				// Fixes operators (not keywords):
				"keyword.operator",
				"storage.type.function.arrow",
				"storage.modifier.array.bracket",
				// Fixes Java (package name, imports and class names as keywords):
				"storage.modifier.import",
				"storage.modifier.package",
				"storage.type.java",
				"storage.type.primitive.java",
				"storage.type.object.array.java",
				// Fixes JSON (prevents wall of strings):
				"support.type.property-name", "punctuation.support.type.property-name",
				// Fixes YAML (prevents wall of keywords):
				"entity.name.tag.yaml"
			],
			"settings": {
				"foreground": "#d3d4d2"
			}
		}
	]
}
