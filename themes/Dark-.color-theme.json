{
	"$schema": "vscode://schemas/color-theme",
	"name": "Dark- (Visual Studio)",
	"include": "./Dark--.color-theme.json",
	"tokenColors": [
		/*
		 * Keyword ------------------------------------------------------------
		 */
		{
			"name": "Keywords",
			"scope": [
				"keyword",
				"constant.language",
				"variable.language",
				// (@see keyword.operator)
				"keyword.operator.new",
				"keyword.operator.expression",
				"keyword.operator.cast",
				"keyword.operator.sizeof",
				"keyword.operator.alignof",
				"keyword.operator.typeid",
				"keyword.operator.alignas",
				"keyword.operator.instanceof",
				"keyword.operator.wordlike",
				// [C][Java][JavaScript][TypeScript]
				"storage.modifier",
				"storage.type",
				"support.type.builtin",
				"support.type.primitive",
				// [Python]
				"keyword.operator.logical.python",
				// [SQL]
				"support.function.aggregate.sql",
			],
			"settings": {
				"foreground": "#569cd6" // (from "Dark (Visual Studio)")
			}
		},
		{
			"name": "Not keywords",
			"scope": [
				"keyword.operator",
				"keyword.control.ternary",
				"storage.type.function.arrow",
				"storage.modifier.array.bracket",
				// [Java]
				"storage.modifier.import.java",
				"storage.modifier.package.java",
				"storage.type.java",
				"storage.type.object.array.java",
				"variable.language.wildcard.java",
			],
			"settings": {
				"foreground": "#d4d4d4" // (restores "editor.foreground")
			}
		},
		{
			"name": "More keywords",
			"scope": [
				// [Assembly]
				"keyword.mnemonic.z80asm",
				"keyword.control.z80asm",
				"support.type.flag.z80asm",
				// [Batch]
				"keyword.command.batchfile",
				"keyword.operator.logical.batchfile", // NOT
				"keyword.operator.pipe.batchfile", // |
				"keyword.operator.redirection.batchfile", // < >
				// [Markdown]
				"punctuation.definition.heading", // #, ##, ###
				"punctuation.definition.list.begin", // *, -
				"punctuation.definition.link.description", // ![]()
				"punctuation.definition.link.title", // []()
				"punctuation.definition.metadata.markdown", // []()
				"punctuation.definition.quote", // >
			],
			"settings": {
				"foreground": "#569cd6" // (from "Dark (Visual Studio)")
			}
		},
		/*
		 * Constants and numbers ----------------------------------------------
		 */
		{
			"name": "Constants",
			"scope": [
				"constant",
				// [Assembly]
				"support.type.register",
				// [Batch]
				"variable.parameter.batchfile",
				"variable.parameter.repeat.batchfile",
			],
			"settings": {
				"foreground": "#b5cea8" // (from "Dark (Visual Studio)")
			}
		},
		{
			"name": "Numbers",
			"scope": [
				"constant.numeric",
				"keyword.operator.plus.exponent",
				"keyword.operator.minus.exponent",
				"keyword.other.unit",
			],
			"settings": {
				"foreground": "#b5cea8" // (from "Dark (Visual Studio)")
			}
		},
		/*
		 * Strings and RegExps ------------------------------------------------
		 */
		{
			"name": "Strings",
			"scope": [
				"string",
				"punctuation.definition.string",
			],
			"settings": {
				"foreground": "#ce9178" // (from "Dark (Visual Studio)")
			}
		},
		/*
		 * Comments -----------------------------------------------------------
		 */
		{
			"name": "Special comments",
			"scope": [
				// [Java] Javadoc:
				"keyword.other.documentation.javadoc.java",
				// [JavaScript][TypeScript] JSDoc:
				"storage.type.class.jsdoc",
			],
			"settings": {
				"foreground": "#d4d4d4c0", // (halfway between editor.foreground and comment)
				"fontStyle": "italic" // (additional italics)
			}
		},
		/*
		 * Tag-based languages ------------------------------------------------
		 */
		{
			"name": "Tags",
			"scope": [
				// [HTML][XML]
				"entity.name.tag",
				"punctuation.definition.tag",
			],
			"settings": {
				"foreground": "#569cd6" // (same as "keyword"; was "#d7ba7d" in "Dark (Visual Studio)")
			}
		},
		{
			"name": "Not tags",
			"scope": [
				// [JSON][YAML] (prevents wall of strings):
				"entity.name.tag.yaml",
				"support.type.property-name",
				"punctuation.support.type.property-name",
			],
			"settings": {
				"foreground": "#d4d4d4" // (restores as "editor.foreground")
			}
		},
		/*
		 * [Batch] ------------------------------------------------------------
		 */
		{
			"name": "Batch comments and visual noise",
			"scope": [
				// [Batch]
				"keyword.command.rem.batchfile", // REM
				"keyword.operator.at.batchfile", // @
			],
			"settings": {
				"foreground": "#d4d4d480" // (same as "comment"; 50% "editor.foreground")
			}
		},
		/*
		 * [C] ----------------------------------------------------------------
		 */
		{
			"scope": [
				"entity.name.scope-resolution",
				"punctuation.separator.scope-resolution",
				"support.other.attribute.cpp",
			],
			"settings": {
				"foreground": "#d4d4d4c0", // (halfway between editor.foreground and comment)
				"fontStyle": "italic" // (additional italics)
			}
		},
		/*
		 * [Markdown] ---------------------------------------------------------
		 */
		{
			"name": "Markdown Strings",
			"scope": [
				"markup.inline.raw.string", // `this`
				"meta.link.inline.markdown", // [etc](this)
				"meta.image.inline.markdown", // ![this](etc)
				"punctuation.definition.markdown", // ```this```
				"punctuation.definition.raw.markdown",
			],
			"settings": {
				"foreground": "#ce9178" // (from "Dark (Visual Studio)")
			}
		},
		{
			"name": "Markdown annotations",
			"scope": [
				"string.other.link.description.markdown",
				"fenced_code.block.language",
			],
			"settings": {
				"foreground": "#d4d4d4c0", // (halfway between editor.foreground and comment)
				"fontStyle": "italic" // (additional italics)
			}
		},
		{
			"name": "Not Markdown Strings",
			"scope": [
				"string.other.link.title.markdown", // [this](etc)
			],
			"settings": {
				"foreground": "#d4d4d4" // (restores as "editor.foreground")
			}
		},
		/*
		 * [Java] -------------------------------------------------------------
		 */
		{
			"name": "Java annotations and generics",
			"scope": [
				// [Java] Annotations:
				"storage.type.annotation.java",
				"punctuation.definition.annotation.java",
				"punctuation.definition.annotation-arguments",
				// [Java] Generics:
				"storage.type.generic.java",
				"storage.type.generic.wildcard.java",
				"punctuation.bracket.angle.java",
			],
			"settings": {
				"foreground": "#d4d4d4c0", // (halfway between editor.foreground and comment)
				"fontStyle": "italic" // (additional italics)
			}
		},
	]
}
